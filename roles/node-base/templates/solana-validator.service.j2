[Unit]
Description=Solana Validator
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User={{ solana_user }}
LimitNOFILE=1024000
LogRateLimitIntervalSec=0
Environment="PATH=/bin:/usr/bin:{{ env_path }}"
ExecStart=/home/sol/bin/validator.sh

[Install]
WantedBy=multi-user.target